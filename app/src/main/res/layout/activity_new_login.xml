<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_login">

    <Button
        android:id="@+id/button_creat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:text="Creat"
        app:layout_constraintBottom_toTopOf="@+id/button_return"
        app:layout_constraintTop_toBottomOf="@+id/password_confirm"
        app:layout_constraintVertical_bias="0.216"
        tools:layout_editor_absoluteX="142dp" />

    <EditText
        android:id="@+id/password_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/username"
        tools:layout_editor_absoluteX="164dp" />

    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/password_1"
        tools:layout_editor_absoluteX="164dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="UserName"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="User_name"
        app:layout_constraintEnd_toStartOf="@+id/username"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="password"
        app:layout_constraintEnd_toStartOf="@+id/password_1"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="141dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="confirme password"
        app:layout_constraintEnd_toStartOf="@+id/password_confirm"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:text="New_account"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="444dp"
        android:text="Return"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="142dp" />
</android.support.constraint.ConstraintLayout>